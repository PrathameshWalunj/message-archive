<Window x:Class="MessageArchive.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Message Archive"
        Height="400" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{x:Static SystemColors.ControlBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <!-- App Icon -->
            <Image Source="pack://application:,,,/Assets/AppIcon.png" 
                   Width="48" Height="48" 
                   Margin="0,0,12,0"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
            
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Message Archive" 
                           FontSize="16" 
                           FontWeight="Bold"
                           FontFamily="Segoe UI"/>
                <TextBlock Text="Version 1.0.0" 
                           FontSize="11" 
                           FontFamily="Segoe UI"
                           Foreground="#545454"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Content -->
        <StackPanel Grid.Row="1">
            <!-- About Section -->
            <TextBlock Text="Message Archive is a desktop utility for viewing and working with iMessage conversations recovered from local iPhone backups. The application presents message history as readable text, provides conversation statistics and analytics, and allows content to be searched and exported. All processing is performed locally on your computer." 
                       FontSize="11" FontFamily="Segoe UI" Foreground="#333333" 
                       TextWrapping="Wrap" Margin="0,0,0,16"/>
            
            <!-- Privacy Section -->
            <GroupBox Header="Data Handling" Margin="0,0,0,12">
                <StackPanel Margin="8">
                    <TextBlock TextWrapping="Wrap"
                               FontSize="11"
                               FontFamily="Segoe UI">
                        This application operates on files stored on the local computer.
                        Message data is read from existing backups and is not modified.
            No network connections are used during normal operation.
        </TextBlock>
    </StackPanel>
</GroupBox>
            
            
            <TextBlock Text="If this helped you, please share it with friends or leave a review!" 
                       FontSize="11" FontFamily="Segoe UI" Foreground="#333333" 
                       TextWrapping="Wrap" Margin="0,0,0,8"/>
        </StackPanel>
        
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Report a Problem" 
                    Width="120"
                    Padding="0,4"
                    FontSize="11"
                    FontFamily="Segoe UI"
                    Click="ReportProblem_Click"
                    Margin="0,0,10,0"/>
            <Button Content="OK" 
                    Width="75"
                    Padding="0,4"
                    FontSize="11"
                    FontFamily="Segoe UI"
                    Click="CloseButton_Click"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>
